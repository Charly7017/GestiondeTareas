@model TareaCreacionViewModel
@{
	ViewData["Title"] = "Actualizar tarea";
}


<form asp-controller="Tareas" asp-action="Actualizar">
	<input type="hidden" asp-for="Id" />
	<div class="mb-3">
		<label class="form-label" asp-for="Nombre"></label>
		<input class="form-control" asp-for="Nombre" />
		<span asp-validation-for="Nombre" class="text-danger"></span>
	</div>

	<div class="mb-3">
		<label class="form-label" asp-for="TipoTareaId"></label>
		<select class="form-control" asp-for="TipoTareaId" asp-items="Model.TiposTareas"></select>
		<span asp-validation-for="TipoTareaId" class="text-danger"></span>
	</div>

	<div class="mb-3">
		<label class="form-label" asp-for="Descripcion"></label>
		<textarea asp-for="Descripcion" class="form-control"></textarea>
		<span asp-validation-for="Descripcion" class="text-danger"></span>
	</div>

	<div class="mb-3">
		<label class="form-label" asp-for="FechaCreacion"></label>
		<input disabled class="form-control" asp-for="FechaCreacion" />
		<span asp-validation-for="FechaCreacion" class="text-danger"></span>
	</div>

	<div class="mb-3">
		<label class="form-label" asp-for="FechaLimite"></label>
		<input class="form-control" asp-for="FechaLimite" />
		<span asp-validation-for="FechaLimite" class="text-danger"></span>
	</div>

	<button class="btn btn-primary" type="submit">Enviar</button>
	<a class="btn btn-secondary" asp-action="Index">Cancelar</a>
	

</form>


@section Scripts{
	<partial name="_ValidationScriptsPartial" />
}
