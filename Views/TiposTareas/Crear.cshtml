@model TipoTarea

@{
	ViewData["Title"] = "Crear tipo tarea";
}

<h1>Crear tipo de tarea</h1>
<h5>Aqui se podran crear tipos de tareas</h5>
<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form asp-controller="TiposTareas" asp-action="Crear">

	<div class="mb-3">
		<label class="form-label" asp-for="Nombre">Nombre</label>
		<input type="text" class="form-control" asp-for="Nombre"/>
		<span asp-validation-for="Nombre" class="text-danger"></span>
	</div>

	<button type="submit" class="btn btn-primary">Enviar</button>
	<a class="btn btn-secondary" asp-action="Index">Cancelar</a>

</form>

@section Scripts{
	<partial name="_ValidationScriptsPartial"/>
}